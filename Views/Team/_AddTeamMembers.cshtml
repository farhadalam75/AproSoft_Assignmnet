
<div class="row pl-0 pr-0 bg-white m-auto shadow" style="padding-bottom: 10px; ">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-3">
        <div class="col-md-12 mt-1">
            <label class="col-md-4">Name</label>
            <div class="col-md-12">
                <input type="text" name="Details[0].Name" id="Name" required="required" class="form-control" />
                <span class="text-danger" id="errorName"></span>
            </div>
            <br />
            <input type="hidden" id="userCount" value="1" />
            <div class="col-md-12" id="nameDiv">
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="col-md-12 mt-1">
            <label class="col-md-4">Gender</label>
            <div class="col-12">
                <select name="Details[0].Gender" id="gender" required="required" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span class="text-danger" id="errorGender"></span>
            </div>
            <br />
            <div class="col-md-12" id="genderDiv">
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="col-md-12 mt-1">
            <label class="col-md-8">Date of Birth</label>
            <div class="col-md-12">
                <input type="date" name="Details[0].DateOfBirth" id="dateOfBirth" required="required" class="form-control" />
                <span class="text-danger" id="errorDateOfBirth"></span>
            </div>
            <br />
            <div class="col-md-12" id="dobDiv">
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="col-md-12 mt-1">
            <label class="col-md-12">Contact No.</label>
            <div class="col-md-12">
                <input type="number" name="Details[0].ContactNo" id="contact" required="required" class="form-control" />
                <span class="text-danger" id="errorContact"></span>
            </div>
            <br />
            <div class="col-md-12" id="contactDiv">
            </div>
        </div>
    </div>
</div>

<div class="d-block mt-4">
    <input type="button" id="addNewButton" value="Add New Member" class="btn btn-primary float-left" onclick="AddNewMember()">
</div>